@model Capluga.Entities.RoleEnt

@{
    ViewBag.Title = "Actualizar Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <h4 class="card-title">Actualizar Rol</h4>

                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-danger" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }

                @using (Html.BeginForm("ActualizarRol", "Rol", FormMethod.Post, new { @class = "pt-3", @enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.RolesID)

                    <div class="form-group">
                        <label>Rol</label>
                        @Html.TextBoxFor(m => m.RoleName, new
                        {
                            @class = "form-control form-control-lg",
                            @placeholder = "Rol",
                            @type = "text"
                        })
                        @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="button" class="btn btn-primary" onclick="confirmUpdate()">
                                Actualizar
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
