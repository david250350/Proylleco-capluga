@model IEnumerable<Capluga.Entities.RoleEnt>
@{
    ViewBag.Title = "Consulta Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Roles</h2>
            <div class="container">
                @if (Model.Count() > 0)
                {

                    <table id="DataTable" class="table table-bordered table-hover">

                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>

                                <th>Actualizar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.RolesID</td>
                                    <td>@item.RoleName</td>



                                    <td style="text-align:center">
                                        <!-- Acciones como editar o eliminar -->
                                        <a href="@Url.Action("ActualizarRol", "Rol", new { q = item.RolesID })"><i class="fa fa-edit fa-lg"></i>&nbsp;&nbsp;</a>
                                        &nbsp;&nbsp;&nbsp;

                                    </td>

                                    <td style="text-align:center">
                                        <a href="#" onclick="confirmDelete('@Url.Action("EliminarRol", "Rol", new { q = item.RolesID })')">
                                            <i class="fa fa-remove fa-lg"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                }
                else
                {
                    <div class="col-12 alert alert-info" role="alert" style="text-align: center; margin-top: 5%;">
                        No hay productos en este momento
                    </div>
                }
            </div>
        </div>
        </div>
</div>